@using System.Web

@model MongoDBCRUD.Models.Alumno

@{
    ViewData["Title"] = "Editar Alumno";
}

<h1>Edit</h1>

<h4>Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombres" class="control-label">Nombres</label>
                <input asp-for="nombres" class="form-control" />
                <span asp-validation-for="nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apePat" class="control-label">Apellido Paterno</label>
                <input asp-for="apePat" class="form-control" />
                <span asp-validation-for="apePat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apeMat" class="control-label">Apellido Materno</label>
                <input asp-for="apeMat" class="form-control" />
                <span asp-validation-for="apeMat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sexo" class="control-label">Sexo</label>
                <select asp-for="sexo" class="form-control">
                    <option value = "">- Seleccione -</option>
                    <option value = "M">Masculino</option>
                    <option value = "F">Femenino</option>
                </select>
                <span asp-validation-for="sexo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecNac" class="control-label">Fecha de Nacimiento</label>
                <input type="date" asp-for="fecNac" class="form-control" />
                <span asp-validation-for="fecNac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nota" class="control-label">Nota</label>
                <input asp-for="nota" class="form-control" />
                <span asp-validation-for="nota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="turno" class="control-label">Turno</label>
                <select asp-for="turno" class="form-control">
                    <option value = "">- Seleccione -</option>
                    <option value = "M">Mañana</option>
                    <option value = "T">Tarde</option>
                    <option value = "N">Noche</option>
                </select>
                <span asp-validation-for="turno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="file" class="control-label">Foto</label>
                <input id="img-selector-edit" type="file" class="form-control" for="file" name="files" accept="image/png, image/jpg, image/jpeg" onchange="mostrarFotoEdit(event);"/>
                <span for="file" class="text-danger"></span>
            </div>

            <div class="form-group">
            @if(Model.fotoBase64 == "")
            {
                
                if(Model.sexo == "M")
                {
                    <img id="img-preview-edit" width="200" src="data:image/png;base64,@Id.IMG_PERFIL_HOMBRE"/>
                }
                else
                {
                    <img id="img-preview-edit" width="200" src="data:image/png;base64,@Id.IMG_PERFIL_MUJER"/>
                }

            }
            else
            {
                <img id="img-preview-edit" width="200" src="data:image/png;base64,@Model.fotoBase64"/>
            }

                <a class="btn btn-success" onclick="descargarImagenEdit();">Descargar imagen</a>
                <a class="btn btn-danger" onclick="eliminarImagenEdit();">Eliminar imagen</a>

            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        
        let fotoHombre = "@Html.Raw(HttpUtility.JavaScriptStringEncode(@Id.IMG_PERFIL_HOMBRE))";
        let fotoMujer = "@Html.Raw(HttpUtility.JavaScriptStringEncode(@Id.IMG_PERFIL_MUJER))";


        function mostrarFotoEdit(e){

            document.getElementById('img-preview-edit').src = '';
            var image = URL.createObjectURL(e.target.files[0]);
            document.getElementById('img-preview-edit').src = image;

        }

        function descargarImagenEdit(){

            var downloadLink = document.getElementById('img-preview-edit').getAttribute('src');
            var fileName = 'img_' + '@Model.id';
            var downloadButton = document.createElement('a');

            downloadButton.href = downloadLink;
            downloadButton.download = fileName;
            downloadButton.click();

        }

        function eliminarImagenEdit(){

            document.getElementById('img-selector-edit').value = '';

            if('@Model.sexo' == 'M'){
                document.getElementById('img-preview-edit').setAttribute('src','data:image/png;base64,' + fotoHombre);
                console.log('@Id.IMG_PERFIL_HOMBRE');
            }else{
                document.getElementById('img-preview-edit').setAttribute('src','data:image/png;base64,' + fotoMujer);
                console.log('@Id.IMG_PERFIL_MUJER');
            }

        }

    
    </script>

}
