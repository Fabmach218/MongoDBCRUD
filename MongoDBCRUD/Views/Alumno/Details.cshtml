@model MongoDBCRUD.Models.Alumno

@{
    ViewData["Title"] = "Detalle de Alumno";
}

<div class="container">
    <div style="display: flex; justify-content: space-between;">
        <div class="col-lg-6">
            @if(Model.fotoBase64 == ""){
                if(Model.sexo == "M")
                {
                    <img class="rounded" src="data:image/png;base64,@Id.IMG_PERFIL_HOMBRE" width="300" />
                }
                else
                {
                    <img class="rounded" src="data:image/png;base64,@Id.IMG_PERFIL_MUJER" width="300" />
                }
            }
            else
            {
                <img class="rounded" src="data:image/png;base64,@Model.fotoBase64" width="300" />
            }
        </div>

        <div class="col-lg-6">
            <div class="row">
                <div class="col-sm-12">
                    <h4>Nombres</h4>
                    <p>@Model.nombres</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Apellido Paterno</h4>
                    <p>@Model.apePat</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Apellido Materno</h4>
                    <p>@Model.apeMat</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Sexo</h4>
                    <p>@Model.sexo</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Fecha de Nacimiento</h4>
                    <p>@Model.fecNac.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Nota</h4>
                    <p>@Model.nota</p>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <h4>Turno</h4>
                    <p>@Model.turno</p>
                </div>
            </div>
            <div class="row">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.id">Editar</a>
                <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@Model.id" onclick="return confirm('¿Seguro que desea eliminar?')">Eliminar</a>
            </div>
    
        </div>

    </div>

</div>